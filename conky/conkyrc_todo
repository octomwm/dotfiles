#This script prints the line number of a txt file, so if you have 8 lines in your txt file it will print "8".
#If your todo list is empty, then the widget will be blank.
#If you have more than 9 item in your todo list, the icon will be red, and the widget will not display the line numbers.

${if_match ${exec wc -l ~/Dropbox/todo.txt | awk '{print $1}' } > 10}${color1}${image ~/.conky/todo2.png -p 5,10}${else}${if_match ${exec wc -l ~/Dropbox/todo.txt | awk '{print $1}' } > 5}${color1}${exec wc -l ~/Dropbox/todo.txt | awk '{print $1}'}${image ~/.conky/todo.png -p 5,10}${else}${if_match ${exec wc -l ~/Dropbox/todo.txt | awk '{print $1}' } > 0}${exec wc -l ~/Dropbox/todo.txt | awk '{print $1}'}${image ~/.conky/todo.png -p 5,10}${endif}${endif}${endif}
